<Window x:Class="Crypto_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypto_Tracker"
        mc:Ignorable="d"
        Title="Crypto Tracker" Height="450" Width="800">

    <!-- Main Grid Layout -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        
        
        <!-- Sidebar -->
        <Grid Grid.Column="0" Background="#2C3E50" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Padding="10" Margin="10" Background="Transparent" Grid.Row="0">
                <TextBlock Text="Crypto Tracker" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>

            <TextBlock Text="Admin Panel" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10" Grid.Row="1"/>

            <Button Content="Dashboard" Background="Transparent" Foreground="White" Margin="5" Grid.Row="2"/>
            <Button Content="Users" Background="Transparent" Foreground="White" Margin="5" Grid.Row="3"/>
            <Button Content="Settings" Background="Transparent" Foreground="White" Margin="5" Grid.Row="4"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="White" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Padding="10" Margin="10" Background="Transparent" Grid.Row="0">
                <TextBlock Text="Crypto Tracker" Foreground="Black" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>

            <TextBlock Text="Connect Your Wallet" Foreground="Black" FontSize="16" FontWeight="Bold" Margin="10" Grid.Row="1"/>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="5">
                <Image Source="D:\My Document\EC3404 GUI Programming\CryptoTracker desktop\Crypto Tracker\Crypto Tracker\Images\bitcoin.png" Width="70" Height="70" Margin="10"/>
                <Image Source="D:\My Document\EC3404 GUI Programming\CryptoTracker desktop\Crypto Tracker\Crypto Tracker\Images\coinbase.png" Width="60" Height="60" Margin="10"/>
                <Image Source="D:\My Document\EC3404 GUI Programming\CryptoTracker desktop\Crypto Tracker\Crypto Tracker\Images\metamask.png" Width="60" Height="60" Margin="10"/>
                <Image Source="D:\My Document\EC3404 GUI Programming\CryptoTracker desktop\Crypto Tracker\Crypto Tracker\Images\cryptocurrency.png" Width="60" Height="60" Margin="10"/>
                <Image Source="D:\My Document\EC3404 GUI Programming\CryptoTracker desktop\Crypto Tracker\Crypto Tracker\Images\crypto-trading.png" Width="60" Height="60" Margin="10"/>

            </StackPanel>

            <TextBlock Text="Welcome to the World's Largest Cryptocurrency Marketplace." Foreground="Black" FontSize="16" FontWeight="Bold" Margin="10" Grid.Row="3"/>
        </Grid>

       
        
    </Grid>
</Window>
